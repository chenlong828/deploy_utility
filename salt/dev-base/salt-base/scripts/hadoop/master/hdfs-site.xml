<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
     <property>
         <name>dfs.replication</name>
         <value>3</value>
     </property>
     <property>
         <name>dfs.name.dir</name>
         <value>/dfs/name/</value>
     </property>
     <property>
         <name>dfs.data.dir</name>
         <value>/dfs/data</value>
     </property>
     <property>
         <name>fs.checkpoint.dir</name>
         <value>/dfs/secondname</value>
     </property>
     <property>
	 <name>dfs.permissions</name>
	 <value>false</value>
     </property> 
	<property>
		<name>dfs.hosts</name> 
		<value>/opt/hadoop/conf/dfs.include</value>
	</property>
	<property> 
		<name>dfs.hosts.exclude</name> 
		<value>/opt/hadoop/conf/dfs.exclude</value>
	</property> 

</configuration>
